# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{md,mkd,mkdn,mdwn,mdown,markdown}]
trim_trailing_whitespace = false

[*.{yaml,yml}]
indent_size = 2

[*.{json,jsonc}]
indent_size = 2
